<h1><%= @task.title %></h1>

<div class="card bg-light my-3">
  <div class="card-body">
    <%= @task.details %>
  </div>
</div>

<% if @task.completed == true %>
  <p>
    <i class="far fa-check-square"></i>
     This task is completed
  </p>
<% else %>
  <p>
    <i class="far fa-square"></i>
     This task is not completed yet!
  </p>
<% end %>

<div>
  <%= link_to edit_path do %>
    <button type="button" class="btn btn-primary">Edit this task</button>
  <% end %>
</div>

<div class="footer border-top mt-3">
  <%= link_to tasks_path do %>
    <i class="fas fa-undo-alt"></i>
    Back to list
  <% end %>
</div>
